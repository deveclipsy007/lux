# ========================================
# AGNO SDK AGENT GENERATOR - CONFIGURAÇÕES
# ========================================
# Copie este arquivo para .env e configure os valores

# ========================================
# CONFIGURAÇÕES EVOLUTION API (WHATSAPP)
# ========================================
# URL base da sua instância Evolution API
EVOLUTION_BASE_URL=https://evolution.agentecortex.com
# Chave de API da Evolution (obrigatório)
EVOLUTION_API_KEY=e464af0bf64bbd059aa777d5cded286e

# Nome padrão para instâncias criadas
EVOLUTION_DEFAULT_INSTANCE=agno-agent

# ========================================
# CONFIGURAÇÕES DO FRAMEWORK AGNO
# ========================================
# Provedor de LLM (openai, anthropic, etc.)
AGNO_MODEL_PROVIDER=openai

# Modelo específico a ser usado
AGNO_MODEL_NAME=gpt-4o

# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
# Origens permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:5500,http://localhost:3000,http://127.0.0.1:5500

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Chave secreta para endpoints protegidos
API_SECRET=dev-secret-key-change-in-production

# ========================================
# CONFIGURAÇÕES OPCIONAIS DE LLM
# ========================================
# OpenAI
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ========================================
# Para notificações via email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Agno Agent Generator

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================
# URL do banco para armazenar dados da aplicação
DATABASE_URL=sqlite:///agno_generator.db

# Para PostgreSQL (alternativo):
# DATABASE_URL=postgresql://user:password@localhost/agno_generator

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Porta do servidor backend
SERVER_PORT=8000

# Host do servidor
SERVER_HOST=0.0.0.0

# Reload automático em desenvolvimento
AUTO_RELOAD=true

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# Habilitar HTTPS (produção)
ENABLE_HTTPS=false

# Certificados SSL (se HTTPS habilitado)
SSL_CERT_FILE=cert.pem
SSL_KEY_FILE=key.pem

# Rate limiting (requisições por minuto por IP)
RATE_LIMIT_PER_MINUTE=100

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Habilitar métricas de performance
ENABLE_METRICS=true

# Endpoint para health check
HEALTH_CHECK_PATH=/health

# Timeout para requisições externas (segundos)
EXTERNAL_REQUEST_TIMEOUT=30

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
# Redis para cache (opcional)
REDIS_URL=redis://localhost:6379/0

# TTL padrão do cache (segundos)
CACHE_TTL=3600

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS DO GERADOR
# ========================================
# Diretório onde agentes gerados são salvos
GENERATED_AGENTS_DIR=./generated_agents

# Máximo de agentes simultâneos
MAX_CONCURRENT_AGENTS=10

# Tempo limite para geração de código (segundos)
CODE_GENERATION_TIMEOUT=120

# ========================================
# WEBHOOKS E INTEGRAÇÕES EXTERNAS
# ========================================
# URL base para webhooks (seu domínio público)
WEBHOOK_BASE_URL=https://yourdomain.com

# Porta para servidor de webhooks
WEBHOOK_PORT=8080

# Secret para validar webhooks recebidos
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
# Habilitar backup automático
AUTO_BACKUP_ENABLED=true

# Intervalo de backup (horas)
BACKUP_INTERVAL_HOURS=24

# Diretório de backups
BACKUP_DIR=./backups

# Número máximo de backups a manter
MAX_BACKUPS_KEEP=7

# ========================================
# CONFIGURAÇÕES DE ANALYTICS (OPCIONAL)
# ========================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# ========================================
# VARIÁVEIS DE AMBIENTE ESPECÍFICAS
# ========================================
# Ambiente de execução (development, staging, production)
ENVIRONMENT=development

# Debug mode (apenas desenvolvimento)
DEBUG_MODE=true

# Timezone padrão
TZ=America/Sao_Paulo

# ========================================
# CONFIGURAÇÕES DE TERCEIROS
# ========================================
# Ngrok para túneis em desenvolvimento
NGROK_AUTH_TOKEN=your_ngrok_token_here

# Sentry para monitoramento de erros
SENTRY_DSN=your_sentry_dsn_here

# ========================================
# CONFIGURAÇÕES EXPERIMENTAIS
# ========================================
# Funcionalidades em beta
ENABLE_BETA_FEATURES=false

# Logging detalhado de requests
VERBOSE_LOGGING=false

# Profiling de performance
ENABLE_PROFILING=false